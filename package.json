{
  "name": "@ldesign/i18n",
  "version": "3.0.1",
  "description": "高性能、现代化的国际化解决方案，支持任意前端框架，内置 Vue 3 集成。包含统一缓存系统、性能监控、智能预加载、翻译键验证器、性能分析器等企业级功能",
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "vue",
    "vue3",
    "typescript",
    "framework-agnostic",
    "multilingual",
    "translation",
    "locale",
    "reactive",
    "composition-api"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "sideEffects": [
    "*.css",
    "*.vue"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder build --watch",
    "build:all": "pnpm exec tsx scripts/build-all-packages.ts",
    "build:all:verified": "node --loader ts-node/esm scripts/build-all-verified.ts",
    "dev": "ldesign-builder build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rimraf es lib dist coverage",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:all": "pnpm exec tsx scripts/lint-all-packages.ts",
    "lint:all:fix": "pnpm exec tsx scripts/lint-all-packages.ts --fix",
    "benchmark": "node benchmark.js",
    "benchmark:advanced": "node --expose-gc benchmark-advanced.js"
  },
  "dependencies": {
    "@ldesign/shared": "workspace:*",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "@vue/runtime-core": "^3.5.18",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.18.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "vue": "^3.4.15",
    "vue-tsc": "^3.0.5"
  },
  "size-limit": [
    {
      "path": "esm/index.js",
      "limit": "35 KB"
    },
    {
      "path": "dist/index.min.js",
      "limit": "40 KB"
    }
  ],
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  }
}