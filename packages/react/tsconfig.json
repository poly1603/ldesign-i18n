{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./es",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "types": ["node", "vitest/globals"],
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "es", "lib", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
  "references": [
    { "path": "../core" }
  ]
}

