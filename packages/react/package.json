{
  "name": "@ldesign/i18n-react",
  "version": "4.0.0",
  "description": "React integration for @ldesign/i18n - Powerful i18n solution with hooks, components, and HOC",
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "react",
    "hooks",
    "typescript",
    "context"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./components": {
      "types": "./es/components/index.d.ts",
      "import": "./es/components/index.js",
      "require": "./lib/components/index.cjs"
    },
    "./components/*": {
      "types": "./es/components/*.d.ts",
      "import": "./es/components/*.js",
      "require": "./lib/components/*.cjs"
    },
    "./context": {
      "types": "./es/context/index.d.ts",
      "import": "./es/context/index.js",
      "require": "./lib/context/index.cjs"
    },
    "./context/*": {
      "types": "./es/context/*.d.ts",
      "import": "./es/context/*.js",
      "require": "./lib/context/*.cjs"
    },
    "./hoc": {
      "types": "./es/hoc/index.d.ts",
      "import": "./es/hoc/index.js",
      "require": "./lib/hoc/index.cjs"
    },
    "./hoc/*": {
      "types": "./es/hoc/*.d.ts",
      "import": "./es/hoc/*.js",
      "require": "./lib/hoc/*.cjs"
    },
    "./hooks": {
      "types": "./es/hooks/index.d.ts",
      "import": "./es/hooks/index.js",
      "require": "./lib/hooks/index.cjs"
    },
    "./hooks/*": {
      "types": "./es/hooks/*.d.ts",
      "import": "./es/hooks/*.js",
      "require": "./lib/hooks/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs",
    "build:watch": "ldesign-builder build --watch",
    "dev": "ldesign-builder build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage .tsbuildinfo",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "dependencies": {
    "@ldesign/i18n-core": "workspace:*",
    "@ldesign/shared": "workspace:*",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.18.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  }
}