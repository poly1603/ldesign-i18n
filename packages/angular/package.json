{
  "name": "@ldesign/i18n-angular",
  "type": "module",
  "version": "4.0.0",
  "description": "Angular integration for @ldesign/i18n - Powerful i18n solution with services, pipes, and directives",
  "author": "ldesign",
  "license": "MIT",
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "angular",
    "typescript",
    "rxjs",
    "reactive"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./services": {
      "types": "./es/services/index.d.ts",
      "import": "./es/services/index.js",
      "require": "./lib/services/index.cjs"
    },
    "./pipes": {
      "types": "./es/pipes/index.d.ts",
      "import": "./es/pipes/index.js",
      "require": "./lib/pipes/index.cjs"
    },
    "./directives": {
      "types": "./es/directives/index.d.ts",
      "import": "./es/directives/index.js",
      "require": "./lib/directives/index.cjs"
    },
    "./components": {
      "types": "./es/components/index.d.ts",
      "import": "./es/components/index.js",
      "require": "./lib/components/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "es",
    "lib",
    "package.json"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs",
    "build:watch": "ldesign-builder build --watch",
    "dev": "ldesign-builder build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage .tsbuildinfo",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "peerDependencies": {
    "@angular/core": "^16.0.0 || ^17.0.0 || ^18.0.0",
    "rxjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/core": {
      "optional": false
    },
    "rxjs": {
      "optional": false
    }
  },
  "dependencies": {
    "@ldesign/i18n-core": "workspace:*",
    "@ldesign/shared": "workspace:*",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@angular/core": "^18.0.0",
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "zone.js": "^0.14.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

